<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HackerPortal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HackerPortal.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
   <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <!-- Site title -->
        <h2><a class="navbar-brand" href="/">DocZ HackerPortal</a></h2>

        <!-- Navigation links -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">
                <!-- Add your navigation links here -->
                <li class="nav-item">
                    <a class="nav-link" href="/Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Challs">Challenges</a>
                </li>
                <!-- Add more navigation links as needed -->
            </ul>
        </div>

        <!-- User information and logout -->
        <div class="navbar-text ml-auto">
            @if (User.Identity.IsAuthenticated)
            {
                @inject IUserScoreService UserScoreService
                <span class="mr-3">
                    Logged in as: @User.Identity.Name
                </span>
                <span class="mr-3" id="userscore">
                    Score: @UserScoreService.GetUserTotalScore(User.Identity.Name)
                </span>
                <a href="/Logout" class="btn btn-danger">Logout</a>
            }
            else
            {
                <a href="/Login" class="btn btn-primary">Login</a>
            }
        </div>
    </div>
</nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - HackerPortal
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>